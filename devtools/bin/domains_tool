#!/bin/sh

# Check Point's domains_tool simulator

errexit () {
    printf '%s\n' "$*" >&2
    exit 1
}


test "$#" = 2 || errexit "Unsupported number of arguments."

# domains_tool -d api.eu-de.assistant.watson.cloud.ibm.com
if test "$1" = -d ; then
    cat <<-+++EOF
	---------------------------------------------------------------------------------------------------
	| Given Domain name:  api.eu-de.assistant.watson.cloud.ibm.com  FQDN: yes                         |
	---------------------------------------------------------------------------------------------------
	| IP address                                                                         | sub-domain |
	---------------------------------------------------------------------------------------------------
	| 23.206.82.76                                                                       |     no     |
	| 104.66.109.85                                                                      |     no     |
	---------------------------------------------------------------------------------------------------
	Total of 2 IP addresses found
	
	+++EOF
elif test "$1" = -ip ; then
    cat <<-+++EOF
	---------------------------------------------------------------------------------------------------
	| Given IP address:  104.66.109.85                                                                |
	---------------------------------------------------------------------------------------------------
	| Domain name                                                                              | FQDN |
	---------------------------------------------------------------------------------------------------
	| api.eu-de.assistant.watson.cloud.ibm.com                                                 | yes  |
	---------------------------------------------------------------------------------------------------
	Total of 1 domains found
	
	+++EOF
fi
